<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_head_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="请选择环境"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <TextView
        android:id="@+id/tv_domain_moce"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="模测环境 122.21.125.155"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <TextView
        android:id="@+id/tv_domain_gongneng"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="功能环境 84.228.13.109"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <TextView
        android:id="@+id/tv_domain_kaifa"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="开发环境 122.21.125.156"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <TextView
        android:id="@+id/tv_domain_shengchan"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="生产环境 rtc.icbc.com.cn"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/SpinnerScreenCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>