<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="排队等待      "
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/current_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"

        android:textColor="#333333"
        android:textSize="24sp"
        tools:text="正在排队" />

    <TextView
        android:id="@+id/current_vip_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/holo_blue_light"
        tools:text="优先队列1" />

    <TextView
        android:id="@+id/current_state_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="#333333"
        android:textSize="14sp"
        tools:text="你当前排在第2位，请耐心等待" />

    <TextView
        android:id="@+id/tip_desc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="14sp"
        tools:text="排队和见证过程请不要切换程序，" />

    <TextView
        android:id="@+id/tip_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="14sp"
        tools:text="否则需要重新排队见证" />

    <TextView
        android:id="@+id/button_tv_cancel"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg_selector"
        android:gravity="center"
        android:text="取消排队" />

    <TextView
        android:id="@+id/button_tv_start"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_button_bg_selector"
        android:gravity="center"
        android:text="开始见证" />

    <TextView
        android:id="@+id/button_tv_retry"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg_selector"
        android:gravity="center"
        android:text="重新排队" />

    <TextView
        android:id="@+id/button_tv_back"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg_selector"
        android:gravity="center"
        android:text="返回首页" />
</LinearLayout>