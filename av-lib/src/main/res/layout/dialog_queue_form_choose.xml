<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_head_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="请选择排队方式"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <TextView
        android:id="@+id/tv_queue_form_common"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="正常排队"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/tv_queue_form_vip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="优先通道"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp" />


        <Spinner
            android:id="@+id/spinner_vip_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:entries="@array/vip_priority"
            android:spinnerMode="dialog" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#ddd" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="取消"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />
</LinearLayout>